<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:padding="40dp"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:text="CAlCULADORA DE IMC"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editepeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:padding="35dp"
            android:text="Digite seu peso" />

        <EditText
            android:id="@+id/editealtura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:padding="35dp"
            android:text="Digite sua altura" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textresultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="RESULTADO"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/PESOIDEAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEU PESO E IDEAL" />

        <RadioButton
            android:id="@+id/estaforadopeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTA FORA DO PESO" />

        <RadioButton
            android:id="@+id/sobrepeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOBRE PESO" />

    </LinearLayout>
</LinearLayout>